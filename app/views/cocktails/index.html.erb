<div class="mx-auto" style="width: 400px;">

<h1> Cocktails list </h1>

<% @cocktails.each do |cocktail| %>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"> <%= link_to cocktail.name, cocktail_path(cocktail)  %> </h5>
   </div>
  </div>
<% end %>

  <div class="pad10">
    <%= link_to "Add your cocktail", new_cocktail_path, class: "btn btn-primary pad20" %>
  </div>

</div>
