<div class="container">

  <!-- Heading -->
  <h1> <%= @cocktail.name %> </h1>

  <!-- Ingredient heading -->
  <div>
    <% if @cocktail.doses.empty? %>
    <p>No ingredients yet. Add yours!</p>
    <% else %>
    <h2> Ingredients </h2>
    <% end %>
  </div>

  <!-- Ingredient list -->

  <% @cocktail.doses.each do |dose| %>
    <div class="ingredients">
      <hr><strong><%= dose.ingredient.name %></strong>

      <%= dose.description %>
      <%= link_to dose_path(dose), method: :delete, data: {confirm: 'Are you sure?'} do %>
        <i class="fas fa-trash-alt"></i>
      <hr>
      <% end %>
    </div>
  <% end %>

  <div>
    <%= link_to "+ Add ingredient", new_cocktail_dose_path(@cocktail)%><br>
    <%= link_to "Go back", cocktails_path %>
  </div>
</div>

